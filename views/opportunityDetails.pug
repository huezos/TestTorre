html 
    head 
        title= title
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(charset="utf-8")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        link(type="text/css" rel="stylesheet" href="//unpkg.com/bootstrap/dist/css/bootstrap.min.css")
        link(type="text/css" rel="stylesheet" href="//unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.min.css")
    body
        #app.container-fluid
            input(ref="id" type="hidden" value="" + opportunity)
            input(ref="email" type="hidden" value="" + email)
            .row
                .col.bg-primary.text-white.text-center 
                    h1 
                        | Opportunity details
            .row.p-1 
                template(v-if="loading")
                    .row
                        .col.text-center.p-2
                            b-spinner(variant="primary" label="Spinning")
                template(v-else)
                    .row 
                        .col-12 
                            | Email:
                            input(v-model="email")
                            =" "
                            button.btn.btn-primary(@click="saveRelationship()")
                                | Save
                            =" "
                            button.btn.btn-danger(@click="deleteRelationship()")
                                | Delete
                        .col-12.text-center.p-2 
                            img(:src="owner['pictureThumbnail']")
                        .col-12 
                            .table-responsive
                                table.table.table-sm 
                                    tbody 
                                        tr.bg-success.text-white
                                            td.text-center(colspan="2")
                                                strong
                                                    | Owner
                                        tr
                                            td 
                                                | Name
                                            td 
                                                | {{ owner["name"] }}
                                        tr
                                            td 
                                                | Headline
                                            td 
                                                | {{ owner["professionalHeadline"] }}
                                        tr.bg-success.text-white 
                                            td.text-center(colspan="2")
                                                strong
                                                    | Languages
                                        template(v-for="language in languages")
                                            tr
                                                td 
                                                    | Language
                                                td 
                                                    | {{ language["language"]["name"] }}
                                            tr 
                                                td 
                                                    | Fluency 
                                                td 
                                                    | {{ language["fluency"] }}
                                        tr.bg-success.text-white 
                                            td.text-center(colspan="2")
                                                strong
                                                    | Details
                                        template(v-for="detail in details")
                                            tr
                                                td 
                                                    | {{ detail["code"] }}
                                                td 
                                                    | {{ detail["content"] }}
                                        tr.bg-success.text-white 
                                            td.text-center(colspan="2")
                                                strong
                                                    | Members
                                        template(v-for="member in members")
                                            tr.text-center(v-if="member['member']")
                                                td 
                                                    | {{ member["person"]["name"] }}
                                                td 
                                                   image(:src="member['person']['pictureThumbnail']")

        script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js")
        script(src="https://unpkg.com/axios/dist/axios.min.js")
        script(src="//unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.min.js")
        script(src="//polyfill.io/v3/polyfill.min.js?features=es2015%2CIntersectionObserver" crossorigin="anonymous")
