html 
    head 
        title= title
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(charset="utf-8")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        link(type="text/css" rel="stylesheet" href="//unpkg.com/bootstrap/dist/css/bootstrap.min.css")
        link(type="text/css" rel="stylesheet" href="//unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.min.css")
    body 
        #app.container-fluid
            input(ref="email" type="hidden" value="" + email)
            .row 
                .col.bg-primary.text-white.text-center 
                    h1 
                        | Opportunities
            .row 
                template(v-if="loading")
                    .row
                        .col.text-center.p-2
                            b-spinner(variant="primary" label="Spinning")
                template(v-else)
                    .col-12 
                        strong 
                            | Email:
                        =" "
                        | {{ email }}
                    .col-12
                        .table-responsive
                            table.table.table-striped 
                                thead 
                                    tr 
                                        th
                                            | Opportunity 
                                        th 
                                            | Open
                                tbody 
                                    tr(v-for="opportunity in opportunities")
                                        td 
                                            | {{ opportunity["name"] }}
                                        td 
                                            button.btn.btn-success(@click="openOpportunity(opportunity)")
                                                | Details
                    .col-12 
                        h3 
                            | Visited
                    .col-12
                        .table-responsive
                            table.table.table-striped 
                                thead 
                                    tr 
                                        th
                                            | Opportunity 
                                        th 
                                            | Date
                                        th 
                                            | Open
                                tbody 
                                    tr(v-for="opportunity in visited")
                                        td 
                                            | {{ opportunity["name"] }}
                                        td 
                                            | {{ opportunity["date"].substr(0, 10) }}
                                        td 
                                            button.btn.btn-success(@click="openOpportunity(opportunity)")
                                                | Details
